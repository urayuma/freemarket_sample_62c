.sell-header
  = link_to root_path, class:"sell-header__link" do
    = image_tag 'fmarket_logo_red.svg', width: '170', class: "sell-header__link--logo"

#item-id{data:{id:"#{@item.id}"}}
.sell-main
  = form_for @item, html: {class: "sell-form zone", id: "item-dropzone"} do |f|
    %h2.sell-form__header
      商品情報を入力
    .sell-form-container
      .sell-form-container__wrapper
        %label.sell-form-container__wrapper--label
          出品画像
        %span.sell-form-container__wrapper--require
          必須
        .sell-form-container__wrapper--caution
          最大10枚までアップロードできます
        = f.fields_for :item ,html: {class: "sell-form zone"} do |image|
          .dropzone-container.clearfix
            #preview
            .dropzone-area
              = image.label :image, class: "dropzone-box", for: "upload-image" do
                .input_area
                  = image.file_field :image, multiple: true, name: 'images[image][]', id: "upload-image", class: "upload-image", 'data-image': 0
                %p.input-area-text ここをクリックしてください
            #preview2
            .dropzone-area2
              = image.label :image, class: "dropzone-box", for: "upload-image" do
                %p.input-area-text ここをクリックしてください

    .sell-item
      .sell-item__form
        %label.sell-item__form--subject 商品名（最大40文字）
        %span.sell-item__form--essential 必須
        = f.text_field :name, placeholder: '商品名（必須 40文字まで）',  class: 'sell-item__form--name'
      .sell-item__form
        %label.sell-item__form--subject 商品の説明（最大1000文字）
        %span.sell-item__form--essential 必須
        = f.text_area :description, placeholder: "商品の説明（必須1,000文字以内） （色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです", rows: 5, class:'sell-item__form--explain'
    .sell-select
      .sell-select__title 商品の詳細
      .select-wrapper
        .sell-select__group
          .category-wrapper
            %label.select-subject カテゴリー
            %span.select-essential 必須
            .parent-wrapper
              = f.collection_select :category_id, @item.category.parent.parent.siblings, :id , :name, {include_blank: "---", selected: @item.category.parent.parent.id}, {id:'select-parent-category'}
              .select-arrow
                %i.fas.fa-chevron-down
            .children-wrapper
              = f.collection_select :category_id, @item.category.parent.siblings, :id , :name, {include_blank: "---", selected:  @item.category.parent.id}, {id:'select-parent-category'}
              .select-arrow
                %i.fas.fa-chevron-down
            .grandchildren-wrapper
              = f.collection_select :category_id, @grandchild_category.siblings, :id , :name, {include_blank: "---", selected: @item.category_id}, {id:'select-parent-category'}
              .select-arrow
                %i.fas.fa-chevron-down
            #size_wrapper
              .sell-item__form
                %label.sell-item__form--subject サイズ
                %span.sell-item__form--essential 必須
                = f.text_field :size, value:@item.size, placeholder: "サイズ（必須） （S,M,L,靴のサイズ等）",  class: 'sell-item__form--size', id:"item_size"
            .brand_wrapper
              %label.sell-item__form--subject ブランド
              %span.sell-item__form--optional 任意
              .brand_select-wrapper
                = f.collection_select :brand_id, @brand, :id , :name, {include_blank: "---", selected: @item.brand_id}, {id:'item-brand-select'}
                .select-arrow
                  %i.fas.fa-chevron-down
        .sell-select__group
          %label.select-subject 商品の状態
          %span.select-essential 必須
          .box-wrapper
            = f.collection_select :usage_status, @usage_status, :name, :name, {include_blank: "---", selected: @item.usage_status}, {class:'select-box'}
            .select-arrow
              %i.fas.fa-chevron-down

    .sell-select
      .sell-select__title 配送について
      = link_to "?", "/items/sell", class:'sell-select__link'
      .selects-wrapper
        .sell-select__group
          .delivery-wrapper
            %label.select-subject 配送料の負担
            %span.select-essential 必須
            .box-wrapper
              = f.collection_select :delivery_fee, @delivery_fee, :name , :name, {include_blank: "---", selected: @item.delivery_fee}, {class:'select-box'}
              .select-arrow
                %i.fas.fa-chevron-down
          .deliveryway-wrapper
            %label.select-subject 配送の方法
            %span.select-essential 必須
            .deliveryway-select-wrapper
              = f.collection_select :delivery_way, @deliveryway, :name , :name, {include_blank: "---", selected: @item.delivery_way}, {class:'select-box'}
              .select-arrow
                %i.fas.fa-chevron-down

        .sell-select__group
          %label.select-subject 発送元の地域
          %span.select-essential 必須
          .box-wrapper
            = f.collection_select :delivery_area, @prefectures, :name , :name, {include_blank: "---"}, {class:'select-box'}
            .select-arrow
              %i.fas.fa-chevron-down
        .sell-select__group
          %label.select-subject 発送までの日数
          %span.select-essential 必須
          .box-wrapper
            = f.collection_select :shipping_date , @shipping_date, :name , :name, {include_blank: "---"}, {class:'select-box'}
            .select-arrow
              %i.fas.fa-chevron-down

    .sell-price
      .sell-price__title 販売価格(300〜9,999,999)
      = link_to "?", "/items/sell", class:'sell-price__link'
      .sell-price__box
        %ul.price-form
          %li.price-form__input
            .price-form__input--left
              %label.input-subject 価格
              %span.input-essential 必須
            .price-form__input--right
              %span.input-chara ￥
              = f.text_field :price, placeholder: '例）300',  class: 'input-form'
          %li.price-form__fee
            .price-form__fee--left
              %label.subject-fee 販売手数料 (10%)
            .price-form__fee--right
              .result-fee -
          %li.price-form__profit
            .price-form__profit--left
              %label.subject-profit 販売利益
            .price-form__profit--right
              .result-profit -

    .sell-send
      .sell-send__submit
        = f.submit :"変更する", class:"sell-send__submit--button", method: :patch,id:"edit-submit"

      .sell-send__back
        = link_to "キャンセル", :back, { class: "sell-send__back--button" }

.single-footer
  = render "/signups/footer"
